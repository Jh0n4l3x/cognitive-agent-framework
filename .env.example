# Variables de entorno para el Framework de Agentes (TypeScript)
# =================================================

# -----------------------------------------------------------------------------
# API KEYS DE LLM PROVIDERS
# -----------------------------------------------------------------------------

# OpenAI API Key (GPT-4, GPT-3.5, etc.)
# Obtén tu key en: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic (Claude 3.5, Claude 3, etc.)
# Obtén tu key en: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# OpenRouter (Acceso unificado a múltiples LLMs)
# Obtén tu key en: https://openrouter.ai/settings/keys
OPENROUTER_API_KEY=

# Together AI
# Obtén tu key en: https://api.together.xyz/settings/api-keys
TOGETHER_API_KEY=

# Ollama API Key
# Obtén tu key en: https://ollama.com/account/api-keys
OLLAMA_API_KEY=

# -----------------------------------------------------------------------------
# LOGGING Y OBSERVABILIDAD
# -----------------------------------------------------------------------------

# LangSmith Configuration (OPCIONAL pero recomendado)
LANGCHAIN_API_KEY=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
LANGSMITH_API_KEY=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
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_PROJECT=AgentFramework

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DEL AGENTE
# -----------------------------------------------------------------------------

# Configuración adicional del agente
AGENT_LOG_LEVEL=INFO
AGENT_TIMEOUT=60

# Default LLM Settings
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=4096

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/agent_framework.log

# Memory Configuration
MEMORY_STORAGE_PATH=./memory_storage
MAX_MEMORY_ITEMS=100

# Agent Configuration
MAX_TASK_RETRIES=3
TASK_TIMEOUT=300000

# Environment
NODE_ENV=development

# -----------------------------------------------------------------------------
# ALMACENAMIENTO Y HERRAMIENTAS
# -----------------------------------------------------------------------------

# Configuración de ChromaDB
CHROMA_PERSIST_DIRECTORY=./memory_store

# Configuración de herramientas web
WEB_SEARCH_TIMEOUT=10
WEB_SEARCH_MAX_RESULTS=5

# -----------------------------------------------------------------------------
# INTEGRACIONES EXTERNAS (OPCIONAL)
# -----------------------------------------------------------------------------

# Notion
NOTION_TOKEN=

# Slack
SLACK_BOT_TOKEN=

# Discord
DISCORD_BOT_TOKEN=

# Encryption Key (para memoria cifrada)
ENCRYPTION_KEY=

# -----------------------------------------------------------------------------
# TAVILY API Key (para integración con Tavily)
# Obtén tu key en: https://tavily.com/settings/api-keys
TAVILY_API_KEY=
